<script src='/javascript/godkendelse-af-student.js' defer></script>
<script src="/js/cropper.js"></script>
<link href="/stylesheets/cropper.css" rel="stylesheet">


<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>{{loggedInUser.fornavn}} {{loggedInUser.efternavn}}</h1>
        </div>
    </div>

    <form action="/profil/redigerstudent-save"
          method="POST"
          id="redigerStudentForm"
          name="redigerStudentForm"
          enctype="multipart/form-data">

        <div class="row">
            <div class="form-column col-12 col-md-4">

                <div class="form-group required">
                    <label for="fornavn" data-key="Fornavn">Fornavn</label>
                    <input class="form-control" name="fornavn" id="fornavn" rows="2"
                           value="{{loggedInUser.fornavn}}">
                    <p id="fornavnLengthError" class="CVErrorColor" hidden="true" data-key="Skal_udfyldes">Skal udfyldes</p>
                    <p id="fornavnInvalidError" class="CVErrorColor" hidden="true" data-key="Ugyldigt_fornavn">Ugyldigt fornavn</p>
                </div>
                <div class="form-group required">
                    <label for="efternavn" data-key="Efternavn">Efternavn</label>
                    <input class="form-control" name="efternavn" id="efternavn" rows="2"
                           value="{{loggedInUser.efternavn}}">
                    <p id="efternavnLengthError" class="CVErrorColor" hidden="true" data-key="Skal_udfyldes">Skal udfyldes</p>
                    <p id="efternavnInvalidError" class="CVErrorColor" hidden="true" data-key="Ugyldigt_efternavn">Ugyldigt efternavn</p>
                </div>
                <div class="form-group required" style="display: none;">
                    <label for="email">Email</label>
                    <input class="form-control" name="email" id="email" rows="2" value="{{loggedInUser.email}}">
                    <p id="emailError" class="CVErrorColor" hidden="true" data-key="Email_adresse_error">Du skal skrive
                        din email her og mindst
                        bruge
                        et @</p>
                </div>
                <div class="form-group required">
                    <label for="telefon" data-key="Telefon">Telefon</label>
                    <input type="number" class="form-control" name="telefon" id="telefon" rows="2"
                           value="{{loggedInUser.tlfnr}}">
                    <p id="telefonError" class="CVErrorColor" hidden="true" data-key="Telefon_error">Du skal skrive dit
                        nummer, det skal
                        præcist
                        være 8
                        tal og må ikke starte med 0</p>
                </div>
                <div class="form-group">
                    <label for="password" data-key="Password">Password</label>
                    <input type="text" class="form-control" name="password" id="password" rows="2">
                    <p id="passwordLengthError" class="CVErrorColor" hidden="true" data-key="Ugyldigt_password">
                        Ugyldigt password
                    </p>
                    <p id="passwordMismatchError" class="CVErrorColor" hidden="true" data-key="Password_matcher_ikke">
                        Password matcher ikke
                    </p>
                </div>
                <div class="form-group">
                    <label for="gentagPassword" data-key="Gentag_password">Gentag password</label>
                    <input type="text" class="form-control" name="gentagPassword" id="gentagPassword" rows="2">
                </div>
                <div>
                    <button type="button" class="btn btn-success" id="gem" data-key="Gem">Gem</button>
                </div>
            </div>
            <div class="form-column col-12 col-md-4">
                <div style="display: flex; flex-direction: row;">
                    <label style="margin-right: 5px" id="profilbilledeLabel"
                           data-key="Profilbillede">Profilbillede</label>
                    <span class="tooltiphelp" data-toggle="tooltip" data-placement="top"
                          title="Filtyper: .jpg, .jpeg, .png. Min. bredde: 250px. Min. højde: 250px. Max. filstørrelse: 1MB. Billedet kan skæres til efter det er valgt."
                          data-key="Profilbillede_tooltip">?</span>
                </div>
                <div class="profilePicHolder">
                    <img id="profilbillede" class="img-thumbnail border-0" src="\images\dummy-profile-pic.jpg"
                         alt="PROFILBILLEDE">
                    <div class="custom-file">
                        <input id="crop_base64" type="text" name="crop_base64" class="d-none">
                        <input type="file" name="profile_picture" accept=".jpg, .jpeg, .png" class="custom-file-input"
                               id="profilePic" onchange="validateAndUpdateInputLabel('picLabel', 'profilePic')">
                        <label id="picLabel" class="custom-file-label" for="profilePic" data-key="Vaelg_billede">Vælg
                            billede</label>
                        <p id="profilePicError" class="CVErrorColor" hidden="true" data-key="Vaelg_billede_error">Du kan
                            kun uploade en fil på maksimum
                            1MB</p>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

{{> cropper-modal}}

<script>
    function validateAndUpdateInputLabel(labelId, inputId) {
        let file = document.getElementById(inputId).files[0];

        // Get dimensions of the image
        if (file.type === "image/jpeg" || file.type === "image/jpg" || file.type === "image/png") {
            let _URL = window.URL || window.webkitURL;
            let img = new Image();
            img.src = _URL.createObjectURL(file);

            // Check the aspect ratio and dimensions
            img.onload = function () {
                if (this.width < 250 || this.height < 250 || file.size > 1000000) {
                    console.log("Invalid image");
                    document.getElementById(inputId).value = '';
                } else {
                    $('#cropperModal').modal({
                        backdrop: 'static',
                        keyboard: false
                    });

                    $("cropperModal").modal('show');

                    let src = this.src;
                    let cropper;

                    $('#cropperModal').on('shown.bs.modal', function (event) {
                        let cropFrame = document.getElementById('cropFrame');
                        cropFrame.src = src
                        cropper = new Cropper(cropFrame, {
                            aspectRatio: 1 / 1,
                            viewMode: 1,
                            movable: false,
                            zoomable: false,
                            rotable: false,
                            minCropBoxWidth: 250,
                            minCropBoxHeight: 250,

                            ready() {

                                $('#confirm').click(function () {
                                    let data = cropper.getData(true);
                                    let imgData = cropper.getImageData();

                                    let canvas = cropper.getCroppedCanvas();
                                    let dataUrl = canvas.toDataURL('image/jpeg');

                                    document.getElementById('crop_base64').value = dataUrl.split(';base64,')[1];
                                    ;
                                    document.getElementById("profilbillede").src = dataUrl;
                                    document.getElementById(labelId).innerHTML = document.getElementById(inputId).files[0].name;
                                });

                            }
                        });
                    })

                    $('#cropperModal').on('hidden.bs.modal', function (event) {
                        cropper.destroy();
                        cropper = null;
                        cropFrame.src = '';
                        $('#cropperModal').off('shown.bs.modal');
                        $('#cropperModal').off('hidden.bs.modal');
                        $('#confirm').off('click');
                    });
                }
            }

        } else {
            console.log("Invalid file type");
        }
    }

    function updateElements() {
        let profilePicture = "{{loggedInUser.profilbillede}}";

        if (profilePicture !== "" && profilePicture != null) {
            document.getElementById("profilbillede").src = '/uploads/' + profilePicture;
        }
    }

    updateElements();
</script>
