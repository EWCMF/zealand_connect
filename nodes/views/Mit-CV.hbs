<script src='/javascript/godkendelse-af-CV.js' defer></script>
<div class="container-fluid">
    <!-- tekst med dit navn og start på form -->
    <p class="text-center">{{Profil}}</p>
    <form method="POST" action="mit-CV/submit" id="cvForm" name="cvForm">
        <!-- Overskrift textarea -->
        <div class="form-group required">
            <label for="exampleFormControlInput1">Overskrift</label>
            <textarea class="form-control" id="overskrift" name="overskrift" rows="2"
                placeholder="Stilling, Status eller hvad du søger">{{Overskrift}}</textarea>
            <p id="OverskriftError" class="CVErrorColor" hidden="false">Skal udfyldes</p>
        </div>
        <!-- studieretning med dropdown -->
        <div class="form-group">
            <div class="row">
                <div class="col-sm-4">
                    <label for="exampleFormControlSelect1">Uddannelse</label>
                    <select class="form-control" id="uddannelse" name="uddannelse">
                        <option>Datamatiker</option>
                        <option>Handelsøkonom</option>
                        <option>Finansøkonom</option>
                        <option>International Handel og markedsføring</option>
                        <option>Innovation og Entrepreneurship</option>
                        <option>BygningsKontruktør</option>
                        <option>Byggetekniker</option>
                        <option>Installatør, stærkstrøm</option>
                    </select>
                </div>
                <!-- email med inputfelt -->
                <div class="col-sm-4">
                    <div class="form-group required">
                        <label for="exampleFormControlInput1">Email address</label>
                        <input type="email" class="form-control" placeholder="name@example.com" id="email" name="email"
                            value={{Email}}>
                        <p id="emailError" class="CVErrorColor" hidden="true">Du skal skrive din email her og mindst
                            bruge et @</p>
                    </div>
                </div>
                <!-- Sprog med inputfelt -->
                <div class="col-sm-4">
                    <div class="form-group required">
                        <label for="exampleFormControlInput1">Sprog</label>
                        <input class="form-control" placeholder="Dansk" id="sprog" name="sprog" value={{Sprog}}>
                        <p id="sprogError" class="CVErrorColor" hidden="true">Du skal skrive dit ønskede sprog her</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <!-- Telefon nummer med inputfelt -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Speciale</label>
                        <input class="form-control" id="speciale" name="speciale" value={{Speciale}}>
                    </div>
                </div>
                <!-- Telefon nummer med inputfelt -->
                <div class="col-sm-4">
                    <div class="form-group required">
                        <label for="exampleFormControlInput1">Telefon</label>
                        <input type="number" class="form-control" id="telefon" name="telefon" placeholder="12345678"
                            value={{Telefon}}>
                        <p id="telefonError" class="CVErrorColor" hidden="true">Du skal skrive dit nummer det skal præcist
                            være 8 tal</p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <!-- hjemmeside med inputfelt -->
                    <div class="form-group">
                        <label for="exampleFormControlInput1">LinkedIn</label>
                        <input class="form-control" id="LinkedIn" name="LinkedIn" placeholder="https://example.dk">
                    </div>
                </div>
            </div>
            <div class="form-group required">
                <!-- textarea om mig -->
                <label for="exampleFormControlTextarea1">Om mig</label>
                <textarea class="form-control" rows="3" id="om mig" name="om"
                    placeholder="Skal udfyldes">{{Om}}</textarea>
                <p id="OmMigError" class="CVErrorColor" hidden="false">Skal udfyldes</p>
            </div>
            <div class="form-group">
                <!-- textarea om mig -->
                <label for="exampleFormControlTextarea1">IT Kompetencer</label>
                <textarea class="form-control" rows="3" id="IT-Kompetencer" name="IT-Kompetencer"
                    placeholder="Skal udfyldes">{{IT-Kompetencer}}</textarea>
            </div>
            <div class="form-group">
                <!-- textarea om mig -->
                <label for="exampleFormControlTextarea1">Udenlandsophold og frivilligt arbejde</label>
                <textarea class="form-control" rows="3" id="UogFA" name="UogFA"
                    placeholder="Skal udfyldes">{{UogFA}}</textarea>
            </div>
            <div class="form-group required required">
                <!-- textarea med arbejdserfaring -->
                <label for="exampleFormControlTextarea1">Erhvervserfaring</label>
                <textarea class="form-control" rows="3" id="arbejdserfaring" name="arbejdserfaring"
                    placeholder="Tidligere eller nuværende arbejdserfaring">{{Arbejdserfaring}}</textarea>
                <p id="ArbejdserfaringError" class="CVErrorColor" hidden="true">Skal udfyldes</p>
            </div>
            <div class="form-group">
                <!-- textarea med uddannelse -->
                <label for="exampleFormControlTextarea1">Tidligere Uddannelse</label>
                <textarea class="form-control" rows="3" id="Tidligere-uddannelse" name="Tidligere-uddannelse"
                    placeholder="Tidligere eller lidt om din nuværende Uddannelse">{{Tidligere-uddannelse}}</textarea>
            </div>
            <div class="form-group required">
                <!-- textarea om mig -->
                <label for="exampleFormControlTextarea1">Hjemmeside</label>
                <textarea class="form-control" rows="3" id="hjemmeside" name="hjemmeside" placeholder="https://example.dk">{{Hjemmeside}}</textarea>
                <p id="homepageError" class="CVErrorColor" hidden="true">Skal udfyldes</p>
            </div>
            <div class="form-group">
                <!-- textarea med hobby -->
                <label for="exampleFormControlTextarea1">Fritidsinteresser</label>
                <textarea class="form-control" rows="3" id="fritidsinteresser" name="fritidsinteresser" placeholder="Valgfri">{{fritidsinteresser}}</textarea>
            </div>
            <div class="text-center">
                <!-- CheckBox til om en cv skal være offentlig -->
                <div class="CV-OffentligCheckBox">
                    <input type="checkbox" class="form-check-input" id="OffentligCheckBox" name="offentligCheckBox"
                        checked={{Offentlig}}>
                    <label class="form-check-label" for="OffentligCheckBox">Offentlig</label>
                </div>
                <!-- Button der sender informationen videre -->
                <div>
                    <button type="button" class="btn btn-success" id="gem">Gem</button>
                </div>
            </div>
        </div>
    </form>
</div>