<script>
    let autobreak = document.getElementsByClassName('autobreak');
    for (let i = 0; i < autobreak.length; i++) {
        autobreak[i].innerHTML = autobreak[i].innerHTML.trim();
    }

    function adminDeleteCV(){
        let cvId = {{json.id}};
        let studentEmail = prompt("Skriv den studerendes email for at bekrÃ¦fte handlingen");
        if (studentEmail){
            let xhttp = new XMLHttpRequest();
            xhttp.open("POST", "/admin-funktioner/delete-cv/" + cvId, true);
            xhttp.send(JSON.stringify({
                email: studentEmail,
            }));

            xhttp.onreadystatechange = function () {
                let responseObject = JSON.parse(this.responseText);
                if (this.readyState === 4 && this.status === 200) {
                    alert(responseObject.message)
                    window.location.href = "../search-cv";
                } else if (this.readyState === 4 && this.status === 400) {
                    alert(responseObject.message)
                }
            }
        }
    }

    function deleteCV(){
        if (confirm("Er du sikker?")) {
            window.location = "/cv/delete";
        }
    }
</script>