<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>
                Reset password
            </h1>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-9 col-md-4">
            <form method="POST" action="/reset-password" id="resetPasswordForm">
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" class="form-control">
                </div>
                <div class="form-group">
                    <label for="gentagPassword">Gentag password:</label>
                    <input type="password" id="gentagPassword" name="gentagPassword" class="form-control">
                    <p id="passwordError" class="CVErrorColor" hidden="true" data-key="Password_error">Password er
                        ikke
                        gyldigt</p>
                    <p>{{message}}</p>
                </div>
            </form>
            <button class="btn btn-success" onclick="resetPassword()">Send</button>
        </div>
    </div>
</div>
<script>
    function resetPassword() {
        document.forms["resetPasswordForm"].submit();
    }
</script>