<script>
    var xhttp = new XMLHttpRequest();
    xhttp.onreadystatechange = function () {
        if (this.readyState == 4 && this.status == 200) {

            let responseObject = JSON.parse(this.responseText)
            if (!responseObject.email === '') {
                document.getElementById('email').innerText = responseObject.email;
            }

            if (!responseObject.navn === '') {
                document.getElementById('navn').innerText = responseObject.navn;
            }

            if (!responseObject.postnr === '') {
                document.getElementById('postnummer').innerText = responseObject.postnr;
            }

            if (!responseObject.by === '') {
                document.getElementById('by').innerText = responseObject.by;
            }

            if (!responseObject.adresse === '') {
                document.getElementById('adresse').innerText = responseObject.adresse;
            }

            if (!responseObject.land === '') {
                document.getElementById('land').innerText = responseObject.land;
            }

            if (!responseObject.cvrnr === '') {
                document.getElementById('CVR').innerText = responseObject.cvrnr;
            }
            if (!responseObject.hjemmeside === '') {
                document.getElementById('hjemmeside').innerText = responseObject.hjemmeside;
            } else { document.getElementById('hjemmesidediv').style.display = 'none' }

            if (!responseObject.tlfnr === '') {
                document.getElementById('telefon').innerText = responseObject.tlfnr;
            } else { document.getElementById('telefondiv').style.display = 'none' }

            if (!responseObject.direktoer === '') {
                document.getElementById('direktoer').innerText = responseObject.direktoer;
            } else { document.getElementById('direktoer').style.display = 'none' }


            if (!responseObject.beskrivelse === '') {
                document.getElementById('beskrivelse').innerText = responseObject.beskrivelse;
            } else { document.getElementById('beskrivelsediv').style.display = 'none' }



            if (responseObject.konktaktnavn === '') {
                document.getElementById('kontaktdiv').style.display = 'none';
            }
            if (!responseObject.konktaktnavn === '') {
                document.getElementById('kontaktnavn').innerText = responseObject.kontaktnavn;
            }
            if (!responseObject.konktaktefternavn === '') {
                document.getElementById('kontaktefternavn').innerText = responseObject.kontaktefternavn;
            }
            if (!responseObject.konktaktemail === '') {
                document.getElementById('kontaktemail').innerText = responseObject.kontaktemail;
            }
            if (!responseObject.konktaktstilling === '') {
                document.getElementById('kontaktstilling').innerText = responseObject.kontaktstilling;
            }



            if (responseObject.dokumenter === '') {
                document.getElementById('dokumentdiv').style.display = 'none'
            } else if (!responseObject.dokumenter === '') {
                document.getElementById('dokumenterhertil').innerText = responseObject.dokumenter
            }


        }
        xhttp.open("GET", "/", true );
        xhttp.send();
    }
</script>