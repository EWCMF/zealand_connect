<script src='/javascript/search-cv.js' defer></script>
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <h1 id="cvOverskrift">CV'er</h1>
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            <form>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                    <label class="form-check-label" for="defaultCheck1">
                        Default checkbox
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck2" disabled>
                    <label class="form-check-label" for="defaultCheck2">
                        Disabled checkbox
                    </label>
                </div>
            </form>
        </div>
        <div class="col">
            {{#each json}}
            <div class="card" id="cvCard">
                <div class="row">
                    <div class="col-auto">
                        <img class="center-cropped"
                            src="https://s2.qwant.com/thumbr/0x380/6/b/2b31be557264439d00d0a6bbffa229c96cda4ba4732c856661907f645426c1/1200px-Blank_square.svg.png?u=https%3A%2F%2Fupload.wikimedia.org%2Fwikipedia%2Fcommons%2Fthumb%2F1%2F1f%2FBlank_square.svg%2F1200px-Blank_square.svg.png&q=0&b=1&p=0&a=1">
                    </div>
                    <div class="col">
                        <div class="card-body">
                            <h5 class="card-title">{{overskrift}}</h5>
                            <h6 class="card-title">{{underoverskrift}}</h5>
                                <p class="card-text">{{info}}</p>
                                <a href="#" class="btn btn-primary">Go somewhere</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>