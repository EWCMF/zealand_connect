{{#each json}}
    <div id="card{{id}}" class="card mb-3">
        <div class="card-header p-0">
            <h6 class="m-2" data-key="{{post_type}}">
                {{post_type}}
            </h6>
        </div>
        <div class="row">
            <div class="col-auto">
                <a href='/internship_view/{{id}}' class="stretched-link">
                    {{#if virksomhed.logo}}
                        <img class="center-cropped" src="/uploads/{{virksomhed.logo}}">
                    {{else}}
                        <img class="center-cropped" src="/images/no-logo.png">
                    {{/if}}
                </a>
            </div>
            <div class="col">
                <a href='/internship_view/{{id}}' class="stretched-link">
                    <div class="card-body">
                        <h4 class="card-title pb-1">{{title}}</h4>
                        <h6 class="card-text autobreak mb-1">{{virksomhed.navn}}</h6>
                        {{#if postcode}}
                            <h6 class="card-text autobreak small text-secondary m-0">{{postcode}} {{city}}
                                , {{region}}</h6>
                        {{/if}}
                    </div>
                </a>
            </div>
            <div class="col-auto mr-3 mt-2">
                {{#if ../isStudent}}
                    <button class="btn fav-button" style="outline: none;" onclick="favourite({{id}})">
                        {{#if isFavourite}}
                            <i id="fav-icon{{id}}" class="icon-heart icon-2x favourite"></i>
                        {{else}}
                            <i id="fav-icon{{id}}" class="icon-heart-empty icon-2x unfavourite"></i>
                        {{/if}}
                    </button>
                {{/if}}

            </div>
        </div>
        <div class="card-footer">
            <div class="container ml-2">
                <div class="row d-flex">
                    <div class="row flex-grow-1">
                        <p class="font-weight-bold pr-1" data-key="Uddannelse_kolon">Uddannelse:</p>
                        <p class="pr-2" data-key="{{education.name}}">{{education.name}}</p>
                    </div>
                    <div class="row mr-2">
                        <p class="font-weight-bold pr-1" data-key="Ansoegningsfrist_kolon">Ans√∏gningsfrist:</p>
                        {{#if post_start_date}}
                            <p class="pr-2">{{post_start_date}}</p>
                        {{else}}
                            <p class="pr-2" data-key="Ingen">Ingen</p>
                        {{/if}}
                        {{#if post_end_date}}
                            <p class="font-weight-bold pr-1" data-key="Praktikstart_kolon">Praktikstart:</p>
                            <p>{{post_end_date}}</p>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/each}}

<script src="/javascript/animation.js"></script>
<script>
    function favourite(id) {
        let xhr = new XMLHttpRequest()
        xhr.onload = function () {
            if (this.readyState == 4 && this.status == 200) {
                let icon = document.getElementById("fav-icon" + id)
                if (this.responseText === "true") {
                    icon.classList.remove('icon-heart-empty', 'unfavourite');
                    icon.classList.add('icon-heart', 'favourite');
                } else {
                    // If we're currently in "/favourites/posts" then remove the card element from the list view. If
                    // we're anywhere else then just leave the card in the view
                    const path = window.location.pathname;
                    if (path === "/favourites/posts"){
                        let card = document.getElementById("card" + id)
                        removeFadeOut(card, 300)
                    }
                    icon.classList.remove('icon-heart', 'favourite');
                    icon.classList.add('icon-heart-empty', 'unfavourite');
                }
            }
        }
        xhr.open('POST', '/favourites/favourite-post');
        xhr.send(id);
    }
</script>