<script src='/javascript/login.js' defer></script>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-8">
            <div id="loginBoxBackground">
                <div id="loginContent">
                    <img src="/images/text-logo.png" id="zealandLogo" alt="Zealand">
                    <div class="radioBtnBox">
                        <input type="radio" class="radioButton" name="tabset" id="tab1" aria-controls="login" checked="checked"
                               onclick="showEASJButton()">
                        <label class="buttonText">Studerende</label>
                        <input type="radio" class="radioButton" name="tabset" id="tab2" aria-controls="login"
                               onclick="showVirksomhedLogin()">
                        <label class="buttonText">Virksomhed</label>
                    </div>
                    <div class="loginBtnBox">
                        <button id="easjLoginKnap">
                            <img src="/images/easj-login-knap.png" alt="EASJ Login">
                        </button>
                        <form action="/login/authenticateZealandConnect" method="post" class="form-group" id="loginForm">
                            <p style="color: red;">{{errormessage}}</p>
                            <input type="email" id="inputFeltEmail" class="form-control" name="email" placeholder="Email"><br>
                            <input type="password" id="inputFeltPassword" class="form-control"
                                   name="password" placeholder="Adgangskode"><br>
                            <input type="checkbox" value="name" id="huskEmailCheckbox">
                            <label for="huskEmailCheckbox">Husk email </label>
                            <input type="submit" class="gulKnap"> Login</>
                        </form>
                    </div>
                </div>
            </div>

            <div id="cookieBox">
                <div id="cookieText">
                    Cookies skal v√¶re aktiveret i din browser
                    <button id="questionMarkButton"><img src="/images/blue-question-mark.png" alt="?"></button>
                </div>
            </div>
        </div>
    </div>
    {{#if virksomhed}}
        <script>
            document.getElementById("tab1").checked=false;
            document.getElementById("tab2").checked=true;
            document.getElementById('easjLoginKnap').style.display = 'none';
            document.getElementById('loginForm').style.display = 'block';
        
        </script>
    {{/if}}
</div>
