<div class="container-fluid">
    <div class="row">
        <div class="col">
            <h1 id="cvOverskrift">Profil</h1>
            <hr>
        </div>
    </div>
    <div class="row mt-3 mb-4">
        <div class="col-12 col-sm-2">
            <img id="profilbillede" class="img-thumbnail border-0" src="\images\dummy-profile-pic.jpg" alt="PROFILBILLEDE">
        </div>
        <div class="col-3 col-lg-1">
            <div class="col">
                <h2 class="mb-3">
                    Navn:
                </h2>
                <h6 class="mb-3">
                    Mail:
                </h6>
                <h6 class="mb-3">
                    Tlf:
                </h6>
            </div>
        </div>
        <div class="col-5 col-md-7">
            <div class="col">
                <h2 class="mb-3">
                    {{loggedInUser.fornavn}} {{loggedInUser.efternavn}}
                </h2>
                <h6 class="mb-3">
                    <a href="mailto:{{loggedInUser.email}}">{{loggedInUser.email}}</a>
                </h6>
                <h6 class="mb-3">
                    {{loggedInUser.tlfnr}}
                </h6>
            </div>
        </div>
        <div class="col-4 col-sm-2 d-flex flex-column">
            <button type="button" class="btn btn-success " onclick="window.location.href='/profil/rediger'">Rediger profil</button>

            {{!-- {{#if ejer}}
            <button type="button" class="btn btn-success mt-3" onclick="window.location.href='../mit-cv/edit'">Rediger CV</button>
            {{/if}} --}}
        </div>
    </div>
    <hr class="mb-4">

</div>    
<script>
    function updateElements() {
        let profilePicture = "{{loggedInUser.profilbillede}}";

        if (profilePicture !== "" && profilePicture != null){
            document.getElementById("profilbillede").src = '/uploads/' + profilePicture;
        }
    }
    updateElements();
</script>
