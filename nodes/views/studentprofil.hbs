<div class="container-fluid">
    <div class="row">
        <div class="col">
            <h1 id="cvOverskrift" data-key="Profil">Profil</h1>
            <hr>
        </div>
    </div>
    <div class="row mt-3 mb-4">
        <div class="col-12 col-sm-2">
            <img id="profilbillede" class="img-thumbnail border-0" src="\images\dummy-profile-pic.jpg" alt="PROFILBILLEDE">
        </div>
        <div class="col-3 col-lg-1">
            <div class="col">
                <h2 class="mb-3" data-key="Navn_kolon">
                    Navn:
                </h2>
                <h6 class="mb-3" data-key="Mail_kolon">
                    Mail:
                </h6>
                <h6 class="mb-3" data-key="Tlf_kolon">
                    Tlf:
                </h6>
            </div>
        </div>
        <div class="col-5 col-md-7">
            <div class="col">
                <h2 class="mb-3">
                    {{loggedInUser.fornavn}} {{loggedInUser.efternavn}}
                </h2>
                <h6 class="mb-3">
                    <a href="mailto:{{loggedInUser.email}}">{{loggedInUser.email}}</a>
                </h6>
                <h6 class="mb-3">
                    {{loggedInUser.tlfnr}}
                </h6>
            </div>
        </div>
        <div class="col-4 col-sm-2 d-flex flex-column">
            <button type="button" class="btn btn-success mb-3" onclick="window.location.href='/profil/rediger'" data-key="Rediger_profil">Rediger profil</button>
            <button type="button" class="btn btn-danger mb-3" onclick="openSletBrugerModal()" id="sletKonto" data-key="Slet_brugerkonto">Slet brugerkonto</button>
        </div>
    </div>
    <hr class="mb-4">

</div>

{{> delete-account-modal }}

<script>
    function updateElements() {
        let profilePicture = "{{loggedInUser.profilbillede}}";

        if (profilePicture !== "" && profilePicture != null){
            document.getElementById("profilbillede").src = '/uploads/' + profilePicture;
        }
    }
    updateElements();

    function openSletBrugerModal() {
        $('#sletBrugerModal').modal({
            backdrop: 'static',
            keyboard: false
        });

        $("sletBrugerModal").modal('show');
    }
</script>
