<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>Indryk opslag</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-8">
            <form>
                <div class="form-group required">
                    <label for="">Titel</label>
                    <input type="text" name="title" id="internshipTitle" class="form-control" placeholder="Titel" required>
                </div>
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="form-group required">
                            <label for="internshipEmail">Email adresse</label>
                            <input type="email" name="Email" id="internshipEmail" class="form-control"
                                placeholder="Email" required>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group required">
                            <label for="internshipName">Navn på kontaktperson</label>
                            <input type="text" name="Navn" id="internshipName" class="form-control" placeholder="Navn" required>
                        </div>
                    </div>
                </div>
                <div class="form-group required">
                    <label for="education">Uddannelse</label>
                    <select class="form-control" name="education" id="educationSelect" required>
                        <option>Handelsøkonom</option>
                        <option>Datamatiker</option>
                        <option>Bygningskonstruktør</option>
                    </select>
                </div>
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="form-group required">
                            <label for="countrySelect">Land</label>
                            <select class="form-control" name="Land" id="countrySelect" required>
                                <option>Danmark</option>
                                <option>Tyskland</option>
                                <option>Sverige</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label for="regionSelect">Region</label>
                            <select class="form-control" name="Region" id="regionSelect">
                                <option>Sjælland</option>
                                <option>Jylland</option>
                                <option>Fyn</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label for="">Ansøgningsfrist</label>
                            <input type="date" class="form-control" name="Ansøgningsfrist" id="internshipEndDate"
                                placeholder="dd / mm / åååå">
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label for="internshipEmploymentDate">Ansættelsestidspunkt</label>
                            <input type="date" class="form-control" name="Ansættelsestidspunkt"
                                id="internshipEmploymentDate" placeholder="dd / mm / åååå">
                        </div>
                    </div>
                </div>
                <div class="form-group required">
                    <label for="editor">Fritekst</label>
                    <div id="editor">
                        <p>Hello World!</p>
                    </div>
                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-success mr-2">Gem</button>
                    <button type="button" class="btn btn-danger">Afbryd</button>
                </div>

            </form>
        </div>
    </div>
</div>
<script src="/js/quill.min.js"></script>
<script>
    var toolbarOptions = [
        [{ 'size': ['small', false, 'large', 'huge'] }],
        ['bold', 'italic', 'underline', 'strike'],
        [{ 'align': [] }],
        [{ 'list': 'ordered' }, { 'list': 'bullet' }],
        [{ 'color': [] }, { 'background': [] }],
        ['link', 'image', 'video'],
        ['clean']
    ];
    var editor = new Quill('#editor', {
        modules: {
            toolbar: toolbarOptions
        },
        theme: 'snow'
    });
</script>